<div class="md:container 2xl:w-1/2 xl:w-3/4 p-4 m-8 mx-auto bg-gray-500 md:rounded-3xl">
  <h2 class="text-3xl text-center m-2">Latest Polls</h2>

  {{#each polls as |poll| }}

    <div class="container w-3/4 p-4 m-8 mx-auto bg-gray-400 rounded-3xl">

      <section>

        <h3 class="text-2xl text-center m-2"><a href="/response/{{poll.id}}">{{poll.name}}</a></h3>

        <div id="poll-{{poll.id}}"></div>

        <p class="text-end text-gray-300">Poll created by {{poll.user.name}} </p>
        <a href="/results/{{poll.id}}">Results</a>

      </section>

    </div>

  {{/each}}
  <!-- Limit to 4 or 5? -->
</div>