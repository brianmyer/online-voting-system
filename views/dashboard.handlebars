<h2 class="text-1xl text-end m-2">Welcome back, {{name}}!</h2>


<div class="md:container 2xl:w-1/2 xl:w-3/4 p-4 m-8 mx-auto bg-gray-500 md:rounded-3xl">

  {{#if polls.length}}
  <div >
    <h3 class="text-3xl text-center m-2">Your polls</h3>

    {{#each polls as |poll|}}
    <div class="container w-3/4 p-4 m-8 mx-auto bg-gray-400 rounded-3xl">

      <div class="">
        <h4 class="text-3xl text-center m-2">{{poll.name}}</h4>
        <button class="p-2 m-2 border-2 rounded-lg bg-red-200 hover:bg-green-200" data-id="{{project.id}}"><a href="/results/{{poll.id}}">Results</a></button>
        <button class="p-2 m-2 border-2 rounded-lg bg-red-200 hover:bg-green-200" data-id="{{project.id}}"><a href="/response/{{poll.id}}">View poll</a></button>
        <button class="p-2 m-2 border-2 rounded-lg bg-red-200 hover:bg-green-200" data-id="{{project.id}}">DELETE</button>
      </div>

    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<a href="/create-poll">
<button>Create a new poll</button>
</a>

